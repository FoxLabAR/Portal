---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen bg-zinc-900 text-gray-100">
      <!-- Navigation -->
      <nav
        class="p-4 flex justify-between items-center border-b border-orange-500/20"
      >
        <div class="flex items-center gap-2">
          <span class="text-orange-500 font-mono">[FOX-LAB]</span>
          <div class="h-2 w-2 bg-orange-500 animate-pulse rounded-full"></div>
        </div>
        <div class="flex gap-6 font-mono text-sm">
          <a href="#missions" class="hover:text-orange-500 transition-colors">MISSION</a
          >
          <a href="#intel" class="hover:text-orange-500 transition-colors">INTEL</a>
          <a href="#operatives" class="hover:text-orange-500 transition-colors"
            >OPERATIVES</a
          >
          <a href="#" class="hover:text-orange-500 transition-colors">CONTACT</a
          >
        </div>
      </nav>
      <!-- contenido -->

      <div class="min-h-screen bg-zinc-900 text-gray-100">
        <slot />
      </div>
    </div>
  </body>
</html>
<style is:global>
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }
</style>
